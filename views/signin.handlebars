<!DOCTYPE html>
<html >
<head>
  <meta charset="UTF-8">
  <title>Sign-Up/Login Form</title>
  <link href='/public/css/font-Titillium.min.css' rel='stylesheet' type='text/css'>

  <link rel="stylesheet" href="public/css/normalize.css">
  <link rel="stylesheet" href="public/css/bootstrap.min.css">


  <link rel="stylesheet" href="public/css/style.css">
  <link rel="stylesheet" type="text/css" href="/public/css/header-user-dropdown.css">




</head>

<body>
  {{> header this}}
  <div class="form mtop70">

    <ul class="tab-group">
      <li class="tab active"><a href="#signup">Sign Up</a></li>
      <li class="tab"><a href="#login">Log In</a></li>
    </ul>

    <div class="tab-content">
      <div id="success-msg" class="alert alert-success" style="display:none"></div>
      <div id="error-msg" class="alert alert-warning" style="display:none"></div>
      <div id="signup">
        <h1>Sign Up for Free</h1>

        <form id="signup-form">

          <div class="top-row">
            <div class="field-wrap">
              <label>
                First Name<span class="req">*</span>
              </label>
              <input type="text" name="first_name" required autocomplete="off" />
            </div>

            <div class="field-wrap">
              <label>
                Last Name<span class="req">*</span>
              </label>
              <input type="text" name="last_name" required autocomplete="off"/>
            </div>
          </div>

          <div class="field-wrap">
            <label>
              Email Address<span class="req">*</span>
            </label>
            <input type="email" name="email" required autocomplete="off"/>
          </div>

          <div class="field-wrap">
            <label>
              Set A Password<span class="req">*</span>
            </label>
            <input type="password" name="password" required autocomplete="off"/>
          </div>

          <!-- <button type="submit" class="button button-block"/>Get Started</button> -->
          <input type="button" class="button button-block" id="signup-submit" value="Get Started">

        </form>

      </div>

      <div id="login">
        <h1>Welcome Back!</h1>

        <form id="login-form">

          <div class="field-wrap">
            <label>
              Email Address<span class="req">*</span>
            </label>
            <input type="email" name="email" required autocomplete="off"/>
          </div>

          <div class="field-wrap">
            <label>
              Password<span class="req">*</span>
            </label>
            <input type="password" name="password" required autocomplete="off"/>
          </div>

          <p class="forgot"><a href="#">Forgot Password?</a></p>
          <!-- <button class="button button-block submit-login" type=""/>Log In</button> -->
          <div class="field-wrap">
            <div class="col-lg-6"><input  class="button button-block" type="button" id="login-submit" value="Log In"></div>
            <div class="col-lg-6"><a href="/auth/facebook"  class="button button-block" type="button" value="Log In With Facebook">Facebook</a></div>
          </div>
        </form>

      </div>

    </div><!-- tab-content -->

  </div> <!-- /form -->
  <script src='/public/js/jquery-1.12.3.js'></script>

  <script src="/public/js/index.js"></script>




</body>
</html>
